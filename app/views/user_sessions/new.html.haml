- @title = 'Admin Login'
- form_for @user_session, :url => user_session_path do |f|
  = f.error_messages

  .form_field
    = f.label :login, 'User name'
    = f.text_field(:login)
  .form_field
    = f.label :password
    = f.password_field :password
  .form_field
    = f.check_box :remember_me
    = f.label :remember_me, "Remember me", {:class=>'checkbox_label'}
  %p
    = f.submit "Login"
    
%p
  = link_to 'Forgot your password?', new_password_reset_path
