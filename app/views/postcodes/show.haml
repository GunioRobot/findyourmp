- @title= @postcode.code

%p= "POSTCODE<br/><strong>#{@postcode.code_with_space}</strong>"

%p= "CONSTITUENCY<br/><strong>#{@postcode.constituency_name} (#{@postcode.constituency_id})</strong>"
%p
  - if @postcode.member_name
    = "MEMBER<br/><strong>#{@postcode.member_name.strip}</strong>"
  - else
    = "NO RECORDED MEMBER"

%p{:style=>'float: right'}
  = link_to('XML', url_for(:action=>:show,:format=>:xml))
  = link_to('JSON', url_for(:action=>:show,:format=>:js))

